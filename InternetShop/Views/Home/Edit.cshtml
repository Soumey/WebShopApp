@using InternetShop.ViewModels
@model EditProductViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    
    <div class="form-group">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" placeholder="Enter product name">
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductDescription">Product Description</label>
        <input asp-for="ProductDescription" class="form-control" placeholder="Enter Product Description">
        <span asp-validation-for="ProductDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductCount">Product Count</label>
        <input asp-for="ProductCount" class="form-control" placeholder="Enter Product Count">
        <span asp-validation-for="ProductCount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice">Product Price</label>
        <input asp-for="ProductPrice" class="form-control" placeholder="Enter Product Price">
        <span asp-validation-for="ProductPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductImage">Product Image</label>
        <input asp-for="ProductImage" type="file" class="form-control" placeholder="Enter Product Image">
        <span asp-validation-for="ProductImage" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
